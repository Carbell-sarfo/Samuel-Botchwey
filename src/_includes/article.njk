--- 

layout: 'base.njk'

--- 

       
<div class="container">
  
  <div class="individual-article__page" id="hero">

      <div class="flow">
          <figure class="main-article__figure">
            <img src="{{ image }}" alt="{{ imageAlt }}">
          </figure>    
          <h1 class="heading-secondary mb-20 text-center"> {{ title }} </h1>
          <h2 class="text-center description"> {{ description }} </h2>
          <p class="text-center author"> {{ author }} </p>

          <hr>
          
          {{ content | safe }}

      </div>
    </div>
</div>

